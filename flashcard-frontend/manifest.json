{
  "manifest_version": 3,
  "name": "FlashCard Extension",
  "version": "1.0",
  "description": "A flashcard browser extension built with Vite and Vanilla JS.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],  
      "js": ["src/content.js"],
      "run_at": "document_end"  
    }
  ]
}
